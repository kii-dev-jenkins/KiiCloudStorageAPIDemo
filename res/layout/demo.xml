<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="400px">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:id="@+id/create_user" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Create User" />

			<Button android:id="@+id/login" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Login" />

			<Button android:id="@+id/create_note" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Create Note" />

			<Button android:id="@+id/get_note" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Get Note" />

			<Button android:id="@+id/upload_file" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Upload File" />

			<Button android:id="@+id/list_files" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Browse files" />

			<Button android:id="@+id/get_file_info" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Get file info" />

			<Button android:id="@+id/get_file_body" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Get file body" />

			<Button android:id="@+id/restore" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Restore file" />
		</LinearLayout>
	</ScrollView>
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/output" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</ScrollView>

</LinearLayout>